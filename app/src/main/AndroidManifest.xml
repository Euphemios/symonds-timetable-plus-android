<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.psyngo.michael.symondstimetableplus" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_logo"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Timetable"
            android:label="@string/title_activity_timetable" >
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".Timetable" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psyngo.michael.symondstimetableplus.Timetable" />
        </activity>
        <activity
            android:name=".Detail_FreePeriod_Activity"
            android:label="@string/title_activity_detail__free_period_"
            android:parentActivityName=".Timetable" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psyngo.michael.symondstimetableplus.Timetable" />
        </activity>
        <activity
            android:name=".AddAFriend_Activity"
            android:label="@string/title_activity_add_afriend_"
            android:parentActivityName=".Timetable" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.psyngo.michael.symondstimetableplus.Timetable" />
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>
